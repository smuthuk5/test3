body{background:#f6fbfd;}
body {
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #e0f7fa, #f1f8e9);
  margin: 0;
  padding: 0;
  color: #333;
  text-align: center;
}

.site-header {
  background: #00796b;
  color: white;
  padding: 15px 0;
}

.site-header .logo {
  width: 80px;
  height: auto;
  vertical-align: middle;
}

nav a {
  color: white;
  margin: 0 15px;
  text-decoration: none;
  font-weight: bold;
}

.hero {
  background: linear-gradient(to right, #00796b, #00796b);
  color: white;
  padding: 40px;
  border-radius: 10px;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20px;
}

.product-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  margin: 15px;
  width: 250px;
  transition: transform 0.3s ease;
}

.product-card:hover {
  transform: scale(1.05);
}

.product-card img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 12px 12px 0 0;
}

.price-box {
  margin: 10px 0;
}

button.toggle {
  background: #00796b;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 8px;
  cursor: pointer;
}

button.toggle:hover {
  background: #004d40;
}

.price-display {
  font-size: 1.1em;
  font-weight: bold;
  color: #ff5722;
}

footer {
  background: #004d40;
  color: white;
  padding: 10px;
  margin-top: 30px;
}

.brand{display:flex;align-items:center;gap:12px}
.brand img{height:64px}
.brand .title{font-weight:700}

.price-badge{font-size:14px;color:#111}
